@model List<Amazon.Models.Cart.CartItemModel>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/Layout.cshtml";
}
@section jsFooter{
    <script src="/Content/JS/Controller/CartController.js"></script>
}
<link href="//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table id="cart" class="table table-hover table-condensed">
                <thead>
                    <tr>
                        <th style="width:50%">Product</th>
                        <th style="width:10%">Price</th>
                        <th style="width:8%">Quantity</th>
                        <th style="width:22%" class="text-center">Subtotal</th>
                        <th style="width:10%"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td data-th="Product">
                                <div class="row">
                                    <div class="col-sm-2 hidden-xs"><img src="@item.Product.product_imge" alt="..." class="img-responsive" /></div>
                                    <div class="col-sm-10">
                                        <h4 class="nomargin">@item.Product.product_name</h4>
                                        <p>Quis aute iure reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Lorem ipsum dolor sit amet.</p>
                                    </div>
                                </div>
                            </td>
                            <td data-th="Price">@item.Product.product_price</td>
                            <td data-th="Quantity">
                                <input type="number" class="txtQuantity" data-id="@item.Product.product_id" value="@item.Quantity">
                            </td>
                            <td data-th="Subtotal" class="text-center">@(@item.Quantity*@item.Product.product_price)</td>
                            <td class="actions" data-th="">
                                <button class="btn btn-info btn-sm"><i class="fa fa-refresh"></i></button>
                                <button class="btnDelete" @*class="btn btn-danger btn-sm"*@ data-id="@item.Product.product_id"><i class="fa fa-trash-o"></i></button>
                            </td>
                        </tr>
                    }

                </tbody>
                <tfoot>
                    @*<tr class="visible-xs">
                        <td class="text-center"><strong>Total 1.99</strong></td>
                    </tr>*@
                    <tr>
                        <td><button id="btnContinue" class="btn btn-warning">Continue Shopping</button></td>
                        <td colspan="2" class="hidden-xs"></td>
                        <td class="hidden-xs text-center"><strong>@Model.Sum(t => t.Product.product_price * t.Quantity)</strong></td>
                        <td><button id="btnUpdate" class="btn btn-success">Update Shopping</button></td>
                        <td><button id="btnDeleteAll" class="btn btn-danger">Delete Cart</button></td>
                        <td><button id="btnPayment" class="btn btn-success btn-block">Pay <i class="fa fa-angle-right"></i></button></td>
                        @*<td><a href="#" class="btn btn-success btn-block">Checkout <i class="fa fa-angle-right"></i></a></td>*@
                    </tr>
                </tfoot>
            </table>
        }
        else
        {
            
            <span class="alert alert-danger">Không có sản phẩm nào trong giỏ hàng</span>
            <br />
           
            <br />
            <button id="btnContinue" class="btn btn-warning">Continue Shopping</button>
        }
    </div>


</div>

