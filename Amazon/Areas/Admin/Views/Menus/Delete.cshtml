@model Amazon.DTO.MenuDTO
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            <h3>Menu Confirm Delete</h3>
        </div>
        <div class="panel-body">

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <!--MenuID, Text, Link DisplayOrder Target Status MenuTypeID MenuParentID Icon Properti-->
                        <th>Menu ID</th>
                        <td>
                            @Html.DisplayFor(model => model.MenuID)
                        </td>
                    </tr>
                    <tr>
                        <th>Text</th>
                        <td>
                            @Html.DisplayFor(model => model.Text)
                        </td>
                    </tr>
                    <tr>
                        <th>Link</th>
                        <td>
                            @Html.DisplayFor(model => model.Link)
                        </td>
                    </tr>
                    <tr>
                        <th>Display Order</th>
                        <td>
                            @Html.DisplayFor(model => model.DisplayOrder)
                        </td>
                    </tr>
                    <tr>
                        <th>Target</th>
                        <td>
                            @Html.DisplayFor(model => model.Target)
                        </td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            @Html.DisplayFor(model => model.Status)
                        </td>
                    </tr>
                    <tr>
                        <th>Menu Type ID</th>
                        <td>
                            @Html.DisplayFor(model => model.MenuTypeID)
                        </td>
                    </tr>
                    <tr>
                        <th>Menu Parent ID</th>
                        <td>
                            @Html.DisplayFor(model => model.MenuParentID)
                        </td>
                    </tr>
                    <tr>
                        <th>Icon</th>
                        <td>
                            @Html.DisplayFor(model => model.Icon)
                        </td>
                    </tr>
                    <tr>
                        <th>Property</th>
                        <td>
                            @Html.DisplayFor(model => model.Properti)
                        </td>
                    </tr>
                </table>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>

