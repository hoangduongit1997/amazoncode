@model PagedList.IPagedList<Amazon.DTO.MenuDTO>
@using PagedList.Mvc
@{
    ViewBag.Title = "Menus Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            <h3>Menus List</h3>
        </div>
        <div class="panel-body">
            <button class="btn btn-default">@Html.ActionLink("Create new", "Create")</button>
            <hr />
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>Menu ID</th>
                    <th>Text</th>
                    <th>Link</th>
                    <th>Display Order</th>
                    <th>Target</th>
                    <th>Status</th>
                    <th>Menu Type ID</th>
                    <th>MenuParentID</th>
                    <th>Icon</th>
                    <th>Property</th>
                    <th>Details</th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td style="width:100px;text-align:center">
                        @Html.DisplayFor(modelItem => item.MenuID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Text)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Target)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MenuTypeID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MenuParentID)
                    </td>
                    <td>
                        <span class="@Html.DisplayFor(modelItem => item.Icon)"></span>
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Properti)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.MenuID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.MenuID })
                    </td>
                </tr>
                }
            </table>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.currentFilter }))
        </div>
    </div>
</div>
