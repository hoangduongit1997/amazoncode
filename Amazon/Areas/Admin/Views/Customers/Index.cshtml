@model PagedList.IPagedList<Amazon.DTO.CustomerDTO>
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            <h3><strong>List of customers</strong></h3>
        </div>
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>ID</th>
                            <th>Name</th>
                            <th>Adress</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Login Name</th>
                            <th>Password</th>
                        </tr>
                    </thead>
                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a href="/Admin/Customers/Edit/@item.customer_id">Edit</a> |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.customer_id })
                                </td>
                                <td>@item.customer_id</td>
                                <td>@item.customer_name</td>
                                <td>@item.address</td>
                                <td>@item.email_address</td>
                                <td>@item.phone_number</td>
                                <td>@item.login_name</td>
                                <td>@item.login_password</td>
                            </tr>

                        }
                    </tbody>
                </table>
                @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
            </div>
        </div>
    </div>
</div>



