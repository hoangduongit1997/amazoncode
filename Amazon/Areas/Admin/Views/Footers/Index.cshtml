@model PagedList.IPagedList<Amazon.DTO.FooterDTO>
@using PagedList.Mvc
@{
    ViewBag.Title = "Footers Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            <h3>Footers List</h3>
        </div>
        <div class="panel-body">
            <button class="btn btn-default">@Html.ActionLink("Create new", "Create")</button>
            <hr />
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <th>FooterID</th>
                    <th>Contain</th>
                    <th>Status</th>
                    <th>Footer ID Type</th>
                    <th>Footer Parent ID</th>
                    <th>Link</th>
                    <th>Target</th>
                    <th>Details</th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td style="width:100px;text-align:center">
                            @Html.DisplayFor(modelItem => item.FooterID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contain)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Status)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FooterIDType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FooterParentID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Link)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Target)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.FooterID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.FooterID })
                        </td>
                    </tr>
                }
            </table>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.currentFilter }))
        </div>
    </div>
</div>
