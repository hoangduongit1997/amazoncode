@model Amazon.DTO.SlideDTO
@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            <h3>Menu Confirm Delete</h3>
        </div>
        <div class="panel-body">

            <h3>Are you sure you want to delete this?</h3>
            <div>
                <hr />
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <!--ID,Image,DisplayOrder,Link,Description,CreatedDate,CreatedBy,ModifiedDate,ModifiedBy,Status,Priority-->
                        <th>Image ID</th>
                        <td>
                            @Html.DisplayFor(model => model.ID)
                        </td>
                    </tr>
                    <tr>
                        <th>Image</th>
                        <td>
                            @Html.DisplayFor(model => model.Image)
                        </td>
                    </tr>
                    <tr>
                        <th>Display Order</th>
                        <td>
                            @Html.DisplayFor(model => model.DisplayOrder)
                        </td>
                    </tr>
                    <tr>
                        <th>Link</th>
                        <td>
                            @Html.DisplayFor(model => model.Link)
                        </td>
                    </tr>
                    <tr>
                        <th>Description</th>
                        <td>
                            @Html.DisplayFor(model => model.Description)
                        </td>
                    </tr>
                    <tr>
                        <th>Created Date</th>
                        <td>
                            @Html.DisplayFor(model => model.CreatedDate)
                        </td>
                    </tr>
                    <tr>
                        <th>Modified Date</th>
                        <td>
                            @Html.DisplayFor(model => model.ModifiedDate)
                        </td>
                    </tr>
                    <tr>
                        <th>ModifiedBy</th>
                        <td>
                            @Html.DisplayFor(model => model.ModifiedBy)
                        </td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>
                            @Html.DisplayFor(model => model.Status)
                        </td>
                    </tr>
                    <tr>
                        <th>Priority</th>
                        <td>
                            @Html.DisplayFor(model => model.Priority)
                        </td>
                    </tr>
                </table>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-default" /> |
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                }
            </div>
        </div>
    </div>
</div>

