@model PagedList.IPagedList<Amazon.DTO.SlideDTO>
@using PagedList.Mvc
@{
    ViewBag.Title = "Menus Management";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel-heading">
            <h3>Menus List</h3>
        </div>
        <div class="panel-body">
            <button class="btn btn-default">@Html.ActionLink("Create new", "Create")</button>
            <hr />
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <!--ID,Image,DisplayOrder,Link,Description,CreatedDate,CreatedBy,ModifiedDate,ModifiedBy,Status,Priority-->
                    <th>Image ID</th>
                    <th>Image Path</th>
                    <th>Display Order</th>
                    <th>Link</th>
                    <th>Description</th>
                    <th>Created Date</th>
                    <th>Created By</th>
                    <th>Modified Date</th>
                    <th>Modified By</th>
                    <th>Status</th>
                    <th>Priority</th>
                    <th>Details</th>
                </tr>

                @foreach (var item in Model)
                {
                <tr>
                    <td style="width:100px;text-align:center">
                        @Html.DisplayFor(modelItem => item.ID)
                    </td>
                    <td>
                        <img width="100" src="@Html.DisplayFor(modelItem => item.Image)" title="@Html.DisplayFor(modelItem => item.Description)" />
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayOrder)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Link)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ModifiedBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Priority)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ID })
                    </td>
                </tr>
                }
            </table>
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, currentFilter = ViewBag.currentFilter }))
        </div>
    </div>
</div>
