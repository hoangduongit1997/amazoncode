@model List<Amazon.DTO.Ref_Product_TypesDTO>
    @{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAD.cshtml";
    }

    <div class="row">
        <div class="col-lg-12">
            <div class="panel-heading">
                <h3>Product Types List</h3>
            </div>
            <div class="panel-body">
                <button class="btn btn-default">@Html.ActionLink("Create new", "Create")</button>
                <hr />
                <table class="table table-striped table-bordered table-hover">
                    <tr>
                        <th>Product Type Code</th>
                        <th>Product Type Description</th>
                        <th>Details</th>
                    </tr>

                    @foreach (var item in Model)
                    {
                    <tr>
                        <td style="width:100px;text-align:center">
                            @Html.DisplayFor(modelItem => item.product_type_code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.product_type_description)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.product_type_code }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.product_type_code })
                        </td>
                    </tr>
                    }
                </table>
            </div>
        </div>
    </div>
