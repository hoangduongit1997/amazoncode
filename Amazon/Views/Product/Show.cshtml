@model Amazon.DTO.ProductDTO
@{
    ViewBag.Title = "Show";
    Layout = "~/Views/Shared/Layout.cshtml";
    var ListProductType = (List<Amazon.DTO.Ref_Product_TypesDTO>)ViewBag.ProductType;
}
<head>
    <link href="~/Content/css/ProductShow.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<div class="row">
    <div style="height:100%" class="contain">
        @*<div id="left-sidebar" style="float:left;height:100vh; background-color:darkgray" class="col-md-3">*@
        <div class="panel-group col-md-3" id="accordion">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h2 class="panel-title">Featured Category</h2>
                    <div class="panel-body">
                        <table class="table table-striped">
                            @foreach (var item in ListProductType)
                            {
                                <tr>
                                    <td>
                                        <a href="@Url.Action("Index","Product",new {typeID=item.product_type_code})">@item.product_type_description</a>
                                    </td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <!---->
        <div class="col-md-9">
            <div id="content" class="row">
                <!---->
                <div class="col-sm-9 col-md-12">
                    <div class="card" style="width:65%">
                        <div class="wrapper row">
                            <div class="preview col-md-6">

                                <div class="preview-pic tab-content">
                                    <div class="tab-pane active" id="pic-1"><img src="@Model.product_imge" /></div>
                                    <div class="tab-pane" id="pic-2"><img src="@Model.product_imge" /></div>
                                    <div class="tab-pane" id="pic-3"><img src="@Model.product_imge" /></div>
                                    <div class="tab-pane" id="pic-4"><img src="@Model.product_imge" /></div>
                                    <div class="tab-pane" id="pic-5"><img src="@Model.product_imge" /></div>
                                </div>
                                <ul class="preview-thumbnail nav nav-tabs">
                                    <li class="active"><a data-target="#pic-1" data-toggle="tab"><img src="@Model.product_imge" /></a></li>
                                    <li><a data-target="#pic-2" data-toggle="tab"><img src="@Model.product_imge" /></a></li>
                                    <li><a data-target="#pic-3" data-toggle="tab"><img src="@Model.product_imge" /></a></li>
                                    <li><a data-target="#pic-4" data-toggle="tab"><img src="@Model.product_imge" /></a></li>
                                    <li><a data-target="#pic-5" data-toggle="tab"><img src="@Model.product_imge" /></a></li>
                                </ul>

                            </div>
                            <div class="details col-md-6">
                                <h3 class="product-title">@Model.product_name</h3>
                                <div class="rating">
                                    <div class="stars">
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star checked"></span>
                                        <span class="fa fa-star"></span>
                                        <span class="fa fa-star"></span>
                                    </div>
                                    <span class="review-no">41 reviews</span>
                                </div>
                                <p class="product-description">Suspendisse quos? Tempus cras iure temporibus? Eu laudantium cubilia sem sem! Repudiandae et! Massa senectus enim minim sociosqu delectus posuere.</p>
                                <h4 class="price">current price: <span>@Model.product_price</span></h4>
                                <p class="vote"><strong>91%</strong> of buyers enjoyed this product! <strong>(87 votes)</strong></p>
                                <h5 class="sizes">
                                    sizes:
                                    <span class="size" data-toggle="tooltip" title="small">s</span>
                                    <span class="size" data-toggle="tooltip" title="medium">m</span>
                                    <span class="size" data-toggle="tooltip" title="large">l</span>
                                    <span class="size" data-toggle="tooltip" title="xtra large">xl</span>
                                </h5>
                                <h5 class="colors">
                                    colors:
                                    <span class="color orange not-available" data-toggle="tooltip" title="Not In store"></span>
                                    <span class="color green"></span>
                                    <span class="color blue"></span>
                                </h5>
                                @*<a href="@Url.Action("AddItem","Cart",new {productId=Model.product_id,quantity=1})">add to cart</a>*@
                                <div class="action">
                                    <button class="add-to-cart btn btn-default" type="button"><a href="@Url.Action("AddItem","Cart",new {productId=Model.product_id,quantity=1})">add to cart</a></button>
                                    <button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <hr />
            </div>
        </div>
    </div>
</div>
<!---->


